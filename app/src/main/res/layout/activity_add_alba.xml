<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!--근무지 이름-->

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:id="@+id/alba_name"
                        android:textSize="13sp"
                        android:hint="근무지 이름"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content" />
                   <ImageView
                       android:id="@+id/alba_name_btn"
                       android:layout_marginLeft="40dp"
                       android:layout_marginTop="10dp"
                       android:src="@drawable/myalba_cancel"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_marginTop="20dp"
                    android:background="@color/edit"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
            </LinearLayout>

            <!--나의 시급-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:id="@+id/my_pay"
                        android:textSize="13sp"
                        android:hint="나의 시급"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/my_pay_btn"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/myalba_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_marginTop="20dp"
                    android:background="@color/edit"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
            </LinearLayout>

            <!--급여 날짜-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:id="@+id/pay_day"
                        android:textSize="13sp"
                        android:hint="급여 날짜"
                        android:inputType="number"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/pay_day_btn"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/myalba_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_marginTop="20dp"
                    android:background="@color/edit"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
            </LinearLayout>

            <!--4대 보험 가입-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="4대 보험"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/myalba_insurance_yes"
                        android:id="@+id/insurance_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/insurance_no"
                        android:src="@drawable/myalba_insurance_no"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    <!--알바 추가 버튼-->
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/confirm"
            android:src="@drawable/signup_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>