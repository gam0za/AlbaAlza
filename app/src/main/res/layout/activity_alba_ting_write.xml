<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.albaalza.P_AlbaTing.AlbaTing_Write">
<EditText
    android:layout_marginTop="20dp"
    android:id="@+id/edit_title"
    android:textSize="30sp"
    android:hint="제목:"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@+id/edit_title"
        android:background="@null"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:gravity="left|top"
        android:id="@+id/edit_writing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="글을 입력해주세요" />

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/add_image"
        android:src="@drawable/image"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/edit_writing"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/write_confirm"
            android:layout_alignParentBottom="true"
            android:src="@drawable/dialog_confim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>



</RelativeLayout>
